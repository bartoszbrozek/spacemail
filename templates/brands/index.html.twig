{% extends 'base.html.twig' %}

{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block container %}
    <div class="panel panel-headline">
        <div class="panel-heading">
            <h3 class="panel-title">Brands</h3>
            <p class="panel-subtitle">Select Brand or Create a New One</p>
        </div>
        <div class="panel-body">

            {% if brands|length > 0 %}
                <a href="{{ path('brands-add') }}" class="btn btn-primary">Add a New Brand</a>
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">From Email</th>
                        <th scope="col">Monthly Limit</th>
                        <th scope="col">Actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for brand in brands %}
                        <tr>
                            <th scope="row">{{ brand.id }}</th>
                            <td>{{ brand.name }}</td>
                            <td>{{ brand.fromEmail }}</td>
                            <td>{{ brand.monthlyLimit }}</td>
                            <td>
                                <a href="{{ path('brands-edit', {'id': brand.id}) }}" class="btn btn-warning">Edit</a>
                                <a href="{{ path('brands-remove', {'id': brand.id}) }}" class="btn btn-danger">Remove</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}

            {% endif %}

        </div>
    </div>
{% endblock %}