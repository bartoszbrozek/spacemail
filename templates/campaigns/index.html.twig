{% extends 'base.html.twig' %}

{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block container %}
    <div class="panel panel-headline">
        <div class="panel-heading">
            <h3 class="panel-title">Campaigns</h3>
            <p class="panel-subtitle">Select Campaign or Create a New One</p>
        </div>
        <div class="panel-body">

            <a href="{{ path('campaign-add') }}" class="btn btn-primary">Add a New Campaign</a>
            {% if campaigns|length > 0 %}
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Status</th>
                        <th scope="col">Subject</th>
                        <th scope="col">Recipents</th>
                        <th scope="col">Sent Date</th>
                        <th scope="col">Unique Opens</th>
                        <th scope="col">Unique Clicks</th>
                        <th scope="col">Track Opens</th>
                        <th scope="col">Track Clicks</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for campaign in campaigns %}
                        <tr>
                            <th scope="row">{{ campaign.id }}</th>
                            <td>{{ campaign.name }}</td>
                            <td>{{ campaign.status.name }}</td>
                            <td>{{ campaign.subject }}</td>
                            <td>{{ campaign.recipents }}</td>
                            <td>{{ campaign.sentDate }}</td>
                            <td>{{ campaign.uniqueOpens }}</td>
                            <td>{{ campaign.uniqueClicks }}</td>
                            <td>
                                {% if campaign.trackOpens %}
                                    On
                                {% else %}
                                    Off
                                {% endif %}
                            </td>
                            <td>
                                {% if campaign.trackClicks %}
                                    On
                                {% else %}
                                    Off
                                {% endif %}
                            </td>
                            <td>
                                <a href="{{ path('campaign-edit', {'id': campaign.id}) }}"
                                   class="btn btn-warning">Edit</a>
                                <a href="{{ path('campaign-remove', {'id': campaign.id}) }}"
                                   class="btn btn-danger">Remove</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}

            {% endif %}

        </div>
    </div>
{% endblock %}