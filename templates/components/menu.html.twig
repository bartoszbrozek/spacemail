{% block menu %}
    <!-- LEFT SIDEBAR -->
    <div id="sidebar-nav" class="sidebar">
        <div class="sidebar-scroll">
            <nav>
                <ul class="nav">
                    <li>
                        <a href="{{ path("index") }}"
                                {% if app.request.get('_route') == 'index' %} class="active" {% endif %}>
                            <i class="lnr lnr-home"></i> <span>Dashboard</span></a>
                    </li>
                    <li>
                        <a href="{{ path("statistics") }}"
                                {% if app.request.get('_route') == 'statistics' %} class="active" {% endif %}>
                            <i class="lnr lnr-home"></i> <span>Statistics</span></a>
                    </li>

                    <li>
                        <a href="{{ path("brands") }}"
                                {% if app.request.get('_route') == 'brands' %} class="active" {% endif %}>
                            <i class="lnr lnr-home"></i> <span>Brands</span></a>
                    </li>

                    <li>
                        <a href="{{ path("campaigns") }}"
                                {% if app.request.get('_route') == 'campaigns' %} class="active" {% endif %}>
                            <i class="lnr lnr-home"></i> <span>Campaigns</span></a>
                    </li>

                    <li>
                        <a href="{{ path("templates") }}"
                                {% if app.request.get('_route') == 'templates' %} class="active" {% endif %}>
                            <i class="lnr lnr-home"></i> <span>Templates</span></a>
                    </li>

                    <li>
                        <a href="#subSettings" data-toggle="collapse"
                                {% if app.request.get('_route') == 'settings-basic'
                                    or app.request.get('_route') == 'settings-email'
                                    or app.request.get('_route') == 'settings-email-identities'
                                    or app.request.get('_route') == 'settings-aws' %} class="active"
                                {% endif %} aria-expanded="true"><i
                                    class="lnr lnr-file-empty"></i> <span>Settings</span> <i
                                    class="icon-submenu lnr lnr-chevron-left"></i></a>
                        <div id="subSettings"
                             class="collapse
                                {% if app.request.get('_route') == 'settings-basic'
                                 or app.request.get('_route') == 'settings-email'
                                 or app.request.get('_route') == 'settings-email-identities'
                                 or app.request.get('_route') == 'settings-aws' %} in {% else %} out {% endif %}"
                             aria-expanded="true" style="">
                            <ul class="nav">
                                <li>
                                    <a href="{{ path("settings-basic") }}" {% if app.request.get('_route') == 'settings-basic' %} class="active" {% endif %} >Basic</a>
                                </li>
                                <li>
                                    <a href="{{ path("settings-aws") }}" {% if app.request.get('_route') == 'settings-aws' %} class="active" {% endif %}>AWS</a>
                                </li>
                                <li>
                                    <a href="{{ path("settings-email-identities") }}" {% if app.request.get('_route') == 'settings-email-identities' %} class="active" {% endif %}>Email
                                        Identities</a></li>
                                <li>
                                    <a href="{{ path("settings-email") }}" {% if app.request.get('_route') == 'settings-email' %} class="active" {% endif %}>Email</a>
                                </li>
                            </ul>
                        </div>
                    </li>

                </ul>
            </nav>
        </div>
    </div>
    <!-- END LEFT SIDEBAR -->
{% endblock %}

