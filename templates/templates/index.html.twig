{% extends 'base.html.twig' %}

{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block container %}
    <div class="panel panel-headline">
        <div class="panel-heading">
            <h3 class="panel-title">Templates</h3>
            <p class="panel-subtitle">Select Template or Create a New One</p>
        </div>
        <div class="panel-body">
            <a href="{{ path('template-add') }}" class="btn btn-primary">Add a New Template</a>
            {% if templates|length > 0 %}

                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">Brand</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for template in templates %}
                        <tr>
                            <th scope="row">{{ template.id }}</th>
                            <td>{{ template.name }}</td>
                            <td>{{ template.brand.name }}</td>
                            <td>
                                <a href="{{ path('template-edit', {'id': template.id}) }}" class="btn btn-warning">Edit</a>
                                <a href="{{ path('template-remove', {'id': template.id}) }}" class="btn btn-danger">Remove</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            {% else %}

            {% endif %}

        </div>
    </div>
{% endblock %}